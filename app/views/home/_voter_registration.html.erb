<%= form_for @registration do |f| %>
  <fieldset>
    <legend>
      Voter Registration
    </legend>
    <div class="clearfix">
      <%= f.label :voter_name %>
      <div class="input">
        <%= f.text_field :voter_name %>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :booth_id %>
      <div class="input">
        <%= f.select :booth_id, Booth.all.collect {|b| ["Voting Booth ##{b.id}", b.id] } %>
      </div>
    </div>
    <div class="clearfix">
      <div class="input">
        <%= f.submit 'Register Voter', class: 'btn primary', disable_with: 'Loading...' %>
      </div>
    </div>
  </fieldset>
<% end %>
